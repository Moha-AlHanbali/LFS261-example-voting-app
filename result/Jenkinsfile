pipeline{
  agent any

  tools {
    nodejs 'NodeJS 22.4.0'
  }

  stages{
    stage("build"){
      when{
        changeset "**/result/*"
      }
      steps{
        echo 'Compiling result app'
	dir('result')
        sh 'npm i'
      }
    }

    stage("test"){
      when{
        changeset "**result/*"
      }
      steps {
        echo 'Testing result app'
	dir('result')
        sh 'npm i'
        sh 'npm test'
      }
    }
  }

  post {
    always {
      echo 'Building multibranch pipeline for result is complete...'
    }
  }
}
